        <style>
            #mh-epilepsy-section {display: block;}
        </style>
    </includeIf>
    <includeIf velocityTest="!$conditionListConcepts.contains($fn.getConcept('PIH:EPILEPSY'))">
        <style>
            #mh-epilepsy-section {display: none;}
